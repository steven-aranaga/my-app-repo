# API Configuration
DATABASE_URL=sqlite:////data/data_store.db?mode=rwc
LOG_FILE=/logs/api.log
RUST_ENV=development

# Backend Configuration
ENVIRONMENT=development
API_URL=http://api:8000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info

# Frontend Configuration
FRONTEND_BUILD_PROFILE=frontend-build
FRONTEND_SERVE_PORT=80

# Security
ENCRYPTION_KEY_FILE=.env.secret
SESSION_SECRET=change_this_in_production
JWT_SECRET=change_this_in_production
API_RATE_LIMIT=100  # requests per minute

# Monitoring
HEALTH_CHECK_INTERVAL=60   # seconds
BACKUP_RETENTION_DAYS=7
CLEANUP_RETENTION_DAYS=30

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_URL

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/opt/my-app-repo/logs

# Docker Configuration
DOCKER_COMPOSE_PROJECT=my-app-repo
DOCKER_NETWORK_NAME=backend_net
